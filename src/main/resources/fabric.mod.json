{
  "schemaVersion": 1,
  "id": "arcane-artistry",
  "version": "${mod_version}",
  "name": "Arcane Artistry",
  "description": "Arcane Artistry is a magic mod that aims at turning the act of casting spells into a more interactive experience. Harnessing the magical powers of lapis lazuli spells are cast by moving the staff into the respective pattern e.g. up, down, left, right for a fireball.",
  "authors": [
    "Gragon",
    "Calamaris",
    "TanConan"
  ],
  "contact": {
    "homepage": "https://arcane-artistry.de",
    "sources": "https://github.com/GragonGit/Arcane-Artistry"
  },
  "license": "MIT",
  "icon": "assets/arcane-artistry/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "de.arcane_artistry.ArcaneArtistry"
    ],
    "client": [
      "de.arcane_artistry.ArcaneArtistryClient"
    ],
    "fabric-datagen": [
      "de.arcane_artistry.datagen.ModDataGenerator"
    ]
  },
  "mixins": [
    "arcane-artistry.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "~${minecraft_version}",
    "java": ">=17",
    "fabric-api": "*",
    "Patchouli": "~${patchouli_version}"
  }
}